<Window x:Class="IT3B_Kostky.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IT3B_Kostky"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Name="rollButton" Content="Roll Dice" Width="100" Height="50" VerticalAlignment="Top" Margin="10" Click="RollButton_Click"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Grid Name="diceGrid1" Width="100" Height="100"/>
            <Grid Name="diceGrid2" Width="100" Height="100"/>
            <Grid Name="diceGrid3" Width="100" Height="100"/>
            <Grid Name="diceGrid4" Width="100" Height="100"/>
            <Grid Name="diceGrid5" Width="100" Height="100"/>
            <Grid Name="diceGrid6" Width="100" Height="100"/>
        </StackPanel>
    </Grid>
</Window>
